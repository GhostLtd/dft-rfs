{% extends 'admin/base-with-nav.html.twig' %}

{% set headingParams = translation_parameters %}
{%- block adminContent -%}
    {%- from '@GhostGovUkFrontend/components/macros.html.twig' import summaryListStart, summaryListEnd, summaryListRow, warningText -%}

    {%- with {warning: subject} -%}

        {{- summaryListStart({classes: 'govuk-!-margin-bottom-5'}) -}}
            {{- summaryListRow({
                key: 'Start',
                value: warning.start | format_datetime
            }) -}}
            {{- summaryListRow({
                key: 'End',
                value: warning.end | format_datetime
            }) -}}
        {{- summaryListEnd() -}}
        {{- warningText({text: "#{translation_prefix}.warning" | trans }) -}}

        {{- form(form) -}}
    {%- endwith -%}
{%- endblock -%}