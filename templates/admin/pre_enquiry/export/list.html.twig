{%- extends 'admin/base-with-nav.html.twig' -%}

{%- set translation_prefix = 'admin.pre-enquiry.export' -%}

{%- block adminContent -%}
    {%- from "@GhostGovUkFrontend/components/macros.html.twig" import tableStart, tableBodyStart, tableEndIncludingBody, tableHead, tableRow, summaryListActionsList -%}
    {{- tableStart() -}}
        {{- tableHead(['Year', 'Month', '']) -}}
        {{- tableBodyStart() -}}
        {%- for month in months -%}
            {% set actionsContent = summaryListActionsList([
                {
                    href: url('admin_preenquiry_export_month', {year: month | date('Y'), month: month | date('m')}),
                    text: 'Export',
                }
            ]) -%}

            {{- tableRow([
                month | date('Y'),
                month | date('F'),
                {html: actionsContent},
            ]) -}}
        {%- endfor -%}
    {{- tableEndIncludingBody() -}}
{%- endblock -%}
