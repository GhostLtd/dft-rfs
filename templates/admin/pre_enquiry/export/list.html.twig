{% extends 'admin/base-with-nav.html.twig' %}

{% set translation_prefix = 'admin.pre-enquiry.export' %}

{% block adminContent %}
    {% from "@GhostGovUkFrontend/components/macros.html.twig" import tableCell, tableHead %}
    {%- set headers = ['Year', 'Month', ''] -%}
    <table class="govuk-table">
        {{- tableHead(false, headers) -}}
        <tbody class="govuk-table__body">
        {%- for month in months -%}
            <tr class="govuk-table__row">
                {{- tableCell(month | date('Y')) -}}
                {{- tableCell(month | date('F')) -}}
                {%- set actions -%}
                    <a href="{{ url('admin_preenquiry_export_month', {year: month | date('Y'), month: month | date('m')}) }}" class="govuk-!-margin-bottom-0">Export</a>
                {%- endset -%}
                {{- tableCell(actions, {actions: true}) -}}
            </tr>
        {%- endfor -%}
        </tbody>
    </table>
{% endblock %}
