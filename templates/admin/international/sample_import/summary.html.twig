{% extends 'admin/base-with-nav.html.twig' %}

{% set translation_prefix = 'admin.international.sample-import-summary' %}

{% block adminContent %}
    {% from '@GhostGovUkFrontend/components/macros.html.twig' import actionlessSummaryListRow %}
    <p class="govuk-body">The following surveys have been created</p>

    <dl class="govuk-summary-list govuk-!-margin-bottom-5">
        {% for survey in surveys %}
            {{ actionlessSummaryListRow("#{survey.surveyPeriodStart | date('format.date.short' | trans)} (#{survey.surveyPeriodEnd.diff(survey.surveyPeriodStart).days + 1} days)", survey.invitationAddress | formatAddress) }}
        {% endfor %}
    </dl>
{% endblock %}