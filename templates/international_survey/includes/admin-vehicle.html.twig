{%- from '@GhostGovUkFrontend/components/macros.html.twig' import optionalActionsSummaryListRow as row -%}
{%- from 'macros.html.twig' import displayAxleConfiguration -%}
{%- set showActions = showActions ?? true -%}

<dl class="govuk-summary-list govuk-!-margin-bottom-9">
    {{- row(showActions, 'international.summary.registration', vehicle.registrationMark|formatRegMark, {('#'): 'common.actions.view'}) -}}
    {{- row(showActions, 'international.summary.type-and-configuration', displayAxleConfiguration(vehicle.axleConfiguration), {('#'): 'common.actions.view'}) -}}

    {%- set bodyChoices = constant('App\\Entity\\Vehicle::BODY_CONFIGURATION_CHOICES') -%}
    {%- set operationChoices = constant('App\\Entity\\Vehicle::OPERATION_TYPE_CHOICES') -%}

    {{- row(showActions, 'common.vehicle.operation-type', choiceLabel(operationChoices, vehicle.operationType) | trans, {('#'): 'common.actions.view'}) -}}
    {{- row(showActions, 'common.vehicle.body-type' | trans, choiceLabel(bodyChoices, vehicle.bodyType) | trans, {('#'): 'common.actions.view'}) -}}
    {{- row(showActions, 'common.vehicle.gross-weight' | trans, "#{vehicle.grossWeight|number_format}kg", {('#'): 'common.actions.view'}) -}}
    {{- row(showActions, 'common.vehicle.carrying-capacity' | trans, "#{vehicle.carryingCapacity|number_format}kg", {('#'): 'common.actions.view'}) -}}
</dl>