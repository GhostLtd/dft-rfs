{% set translation_prefix = 'international.trip-stops' %}
{% extends 'international_survey/base.html.twig' %}

{% block content %}
    {%- from 'macros.html.twig' import addToListRow as row, addToListActionLinks as actionLinks -%}

    <h1 class="page-heading__heading govuk-heading-xl">Stops for trip</h1>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <dl class="govuk-summary-list govuk-!-margin-bottom-9">
                {% for stop in trip.stops %}
                    {% set changeLink = '#change-' ~ stop.id %}
                    {% set removeLink = '#remove-' ~ stop.id %}
                    {{ row('international.stop.summary.stop'|trans({number: loop.index, place: stop.name, country: stop.country|country_name}),
                        {(changeLink): 'common.actions.change', (removeLink): 'common.actions.remove'}
                    ) }}
                {% endfor %}
            </dl>

            <p class="govuk-body">
                {%- set dashboardRoute = constant('App\\Controller\\InternationalSurvey\\TripController::TRIP_ROUTE') -%}
                <a href="{{ url(dashboardRoute, {id: trip.id}) }}" class="govuk-button govuk-button--secondary">Back to
                    trip summary</a>
            </p>
        </div>
        <div class="govuk-grid-column-one-third">...</div>
    </div>
{% endblock %}