{%- from '@GhostGovUkFrontend/components/macros.html.twig' import summaryListStart, summaryListEnd, summaryListRow -%}
{%- set showActions = showActions ?? true -%}

{{- summaryListStart({classes: 'govuk-!-margin-bottom-' ~ (marginBottom ?? 1)}) -}}
    {%- set contactDetailsActionLinks = [
        {
            href: url('app_domesticsurvey_initialdetails_index', {state: constant('App\\Workflow\\DomesticSurvey\\InitialDetailsState::STATE_CHANGE_CONTACT_DETAILS')}),
            text: 'common.actions.change' | trans,
            visuallyHiddenText: 'domestic.survey-response.contact-details.heading' | trans
        }
    ] -%}

    {{- summaryListRow({
        key: 'domestic.survey-response.contact-details.business-name.label' | trans,
        value: survey.response.contactBusinessName | default('-'),
        actions: showActions ? contactDetailsActionLinks : []
    }, showActions) -}}
    {{- summaryListRow({
        key: 'domestic.survey-response.contact-details.contact-name.label' | trans,
        value: survey.response.contactName | default('-'),
        actions: showActions ? contactDetailsActionLinks : []
    }, showActions) -}}
    {{- summaryListRow({
        key: 'domestic.survey-response.contact-details.contact-telephone.label' | trans,
        value: survey.response.contactTelephone | default('-'),
        actions: showActions ? contactDetailsActionLinks : []
    }, showActions) -}}
    {{- summaryListRow({
        key: 'domestic.survey-response.contact-details.contact-email.label' | trans,
        value: survey.response.contactEmail | default('-'),
        actions: showActions ? contactDetailsActionLinks : []
    }, showActions) -}}
{{- summaryListEnd() -}}
