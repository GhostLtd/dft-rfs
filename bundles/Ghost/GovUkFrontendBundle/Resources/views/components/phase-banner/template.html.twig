{%- from '@GhostGovUkFrontend/components/macros.html.twig' import tag as govukTag -%}
<div class="govuk-phase-banner{% if params.classes %} {{ params.classes }}{% endif %}"{% for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
<p class="govuk-phase-banner__content">
    {{ govukTag({text: params.tag.text, html: params.tag.html, classes: 'govuk-phase-banner__content__tag' ~ (params.tag.classes ? ' ' ~ params.tag.classes)}) | njIndent(4) | njTrim }}
    <span class="govuk-phase-banner__text">
      {{ params.html ? (params.html | raw) : params.text }}
    </span>
</p>
</div>